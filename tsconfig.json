{
  "compilerOptions": {
    "target": "es2020",
    "rootDirs": ["src"],
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": [
        "*"
      ],
      "@/__tests__/*": [
        "../__tests__/*"
      ]
    }
  },
  "include": ["src"],
  "exclude": []
}
